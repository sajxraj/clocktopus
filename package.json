{
  "name": "clocktopus",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "build": "npx tsc",
    "lint": "eslint . --ext .ts",
    "clock": "node dist/index.js",
    "clockd": "npx pm2 start dist/index.js --name clocktopus --",
    "monitor": "yarn clockd monitor",
    "monitor:restart": "npx pm2 restart clocktopus",
    "monitor:stop": "npx pm2 stop clocktopus",
    "monitor:logs": "npx pm2 logs clocktopus",
    "monitor:status": "npx pm2 status clocktopus",
    "prepare": "husky",
    "db:cleanup": "node dist/scripts/db-cleanup.js",
    "google-auth": "npx tsc && node dist/scripts/google-auth.js",
    "log-calendar": "npx tsc && node -r dotenv/config dist/scripts/log-calendar-events.js"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "better-sqlite3": "^12.2.0",
    "chalk": "^4.1.2",
    "commander": "^14.0.0",
    "desktop-idle": "^1.3.0",
    "dotenv": "^17.0.1",
    "googleapis": "^153.0.0",
    "inquirer": "^8.2.4",
    "macos-notification-state": "^3.0.0",
    "node-notifier": "^10.0.1",
    "uuid": "^11.1.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/inquirer": "^9.0.8",
    "@types/node": "^24.0.10",
    "@types/node-notifier": "^8.0.5",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "husky": "^9.1.7",
    "pm2": "^6.0.8",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.36.0"
  }
}
